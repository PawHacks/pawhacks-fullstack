<!-- refer.hbs -->
<h1>Refer a Friend</h1>
<form action="/refer" method="POST">
 
  <label for="referee_name">Friend's Name:</label>
  <input type="text" id="referee_name" name="referee_name" required><br>

  <label for="referee_email">Friend's Email:</label>
  <input type="email" id="referee_email" name="referee_email" required>

  <button type="submit">Refer Now</button>
</form>
